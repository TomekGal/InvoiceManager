@model InvoiceManager.Models.ViewModels.AddEditClientViewModel

@{
    ViewBag.Title = "Dodawanie kontrahenta";
}

<h2>Dodawanie kontrahenta</h2>

<div class="row">
    <div class="col-lg-6">
        @using (Html.BeginForm("Client", "Home"))
        {
            @Html.AntiForgeryToken()

                <p class="alert alert-info mt-4 mb-4">
                    Pola tytuł, klient, sposób płatności i termin są <strong>wymagane</strong>
                </p>


            @Html.HiddenFor(x => x.Client.UserId)



            <div class="form-group">
                @Html.LabelFor(x => x.Client.Name)
                @Html.TextBoxFor(x => x.Client.Name,
                new { @class = "form-control", autofocus = "autofocus" })
                @Html.ValidationMessageFor(x => x.Client.Name)
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Client.Email)
                @Html.TextBoxFor(x => x.Client.Email,
                new { @class = "form-control", autofocus = "autofocus" })
                @Html.ValidationMessageFor(x => x.Client.Email)
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Client.Address.Street)
                @Html.TextBoxFor(x => x.Client.Address.Street,
                new { @class = "form-control", autofocus = "autofocus" })
                @Html.ValidationMessageFor(x => x.Client.Address.Street)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Client.Address.Number)
                @Html.TextBoxFor(x => x.Client.Address.Number,
                new { @class = "form-control", autofocus = "autofocus" })
                @Html.ValidationMessageFor(x => x.Client.Address.Number)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Client.Address.City)
                @Html.TextBoxFor(x => x.Client.Address.City,
                new { @class = "form-control", autofocus = "autofocus" })
                @Html.ValidationMessageFor(x => x.Client.Address.City)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Client.Address.PostalCode)
                @Html.TextBoxFor(x => x.Client.Address.PostalCode,
                new { @class = "form-control", autofocus = "autofocus" })
                @Html.ValidationMessageFor(x => x.Client.Address.PostalCode)
            </div>


            <button class="btn btn-primary btn-lg mb-5 mt-3" type="submit">
                Zapisz
            </button>
        }
    </div>
</div>