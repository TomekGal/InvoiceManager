<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Zarządzanie fakturami</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-5">
        <div class="container">

            <a class="navbar-brand" href="@Url.Action("Index","Home") ">Strona główna</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item active">
                        @Html.ActionLink("Kontrahenci", "Clients", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Informacje", "About", "Home", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item active">
                        @Html.ActionLink("Kontakt", "Contact", "Home", null, new { @class = "nav-link" })
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>

        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Zarządzanie fakturami</p>
        </footer>
    </div>



@Scripts.Render("~/bundles/jquery")
@Scripts.Render(" ~/bundles/jqueryval")
@Scripts.Render("~/bundles/bootstrap")

<div class="privacyPolicyInfo" style="display: none;">
    Serwis wykorzystuje pliki cookies. Korzystając ze strony wyrażasz
    zgodę na wykorzystanie plików cookies.
    <button onclick="closePrivacyPolicy()" type="button" class="btn btn-light btn-sm mx-3 my-1 privacyPolicyBtn">
        OK, rozumiem
    </button>

</div>

<script>
    function closePrivacyPolicy() {
        $('.privacyPolicyInfo').css("display", "none")
        $.cookie("privacyPolicy", "1", { path: '/', expires: 365 });
    }

    $(document).ready(function () {
        if ($.cookie("privacyPolicy") !== "1")
            $('.privacyPolicyInfo').css("display", "");

    });
</script>

@RenderSection("scripts", required: false)
  </body>
 </html>
